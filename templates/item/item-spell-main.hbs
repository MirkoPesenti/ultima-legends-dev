<section class="tab {{tabs.item.id}} {{tabs.item.cssClass}} scrollable" id="item" data-tab="{{tabs.item.id}}" data-group="{{tabs.item.group}}">
    <fieldset>
        <legend>Dettagli</legend>
        <div class="form-group stacked">
            <label for="system.description">Descrizione</label>
            <prose-mirror name="system.description" id="system.description" value="{{system.description}}" toggled>
                {{{enrichedHTML.description}}}
            </prose-mirror>
        </div>
        {{#if system.offensive}}
            <div class="form-group stacked">
                <label for="system.opportunity">Opportunità</label>
                <input type="text" name="system.opportunity" id="system.opportunity" value="{{system.opportunity}}" />
            </div>
        {{/if}}
    </fieldset>

    <fieldset>
        <legend>Incantesimo</legend>
        <div class="form-group">
            <label for="system.duration">Durata</label>
            <select name="system.duration" id="system.duration" value="{{system.duration}}">
                {{selectOptions ULTIMA.spellDurations selected=system.duration localize=true}}
            </select>
        </div>

        <div class="form-group">
            <label for="system.cost">
                Costo
                {{#if system.target.multi}}
                    <span data-tooltip="Punti Mente x Bersaglio">(PM x B)</span>
                {{else}}
                    <span data-tooltip="Punti Mente">(PM)</span>
                {{/if}}
            </label>
            <input type="number" name="system.cost" id="system.cost" value="{{system.cost}}" min="0" />
        </div>

        <div class="form-group">
            <label for="system.target.type">Bersaglio</label>
            <div class="form-fields">
                <input type="text" name="system.target.type" id="system.target.type" value="{{system.target.type}}" />

                <div class="form-fields">
                    <input type="checkbox" name="system.target.multi" id="system.target.multi" {{#if system.target.multi}}checked{{/if}} />
                    <label for="system.target.multi">Più bersagli</label>
                </div>
            </div>
        </div>

        {{#if system.offensive}}
            <div class="form-group">
                <label for="system.damage.value">Danno</label>
                <div class="form-fields">
                    <span style="flex:0 0 30px;" data-tooltip="Tiro Maggiore">TM +</span>
                    <input type="number" name="system.damage.value" id="system.damage.value" value="{{system.damage.value}}" />
                    <select name="system.damage.type" id="system.damage.type">
                        {{selectOptions ULTIMA.damageTypes selected=system.damage.type localize=true}}
                    </select>
                </div>
            </div>
        {{/if}}
    </fieldset>
</section>