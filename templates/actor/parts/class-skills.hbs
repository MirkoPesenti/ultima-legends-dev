<div style="{{#if (eq item.system.level.current 0)}}--skill-opacity:0.4;{{/if}}">
	<div class="form-group">
		<span style="flex:0 0 30px; opacity:var(--skill-opacity, 1);">
			<img src="{{item.img}}" alt="{{item.name}}" />
		</span>
		<span class="label" style="opacity:var(--skill-opacity, 1);">{{item.name}}</span>
		<div class="form-fields">
			<span style="flex:0 0 auto; opacity:var(--skill-opacity, 1);">
				Livello: {{item.system.level.current}} / {{item.system.level.max}}
			</span>
			<div style="width:100%; height:28px; border:1px solid var(--color-fieldset-border); border-radius:5px; overflow:hidden; position:relative; opacity:var(--skill-opacity, 1);">
				<div style="position:absolute; top:0; bottom:0; left:0; background-color:var(--color-fieldset-border); width:{{percentage item.system.level.current item.system.level.max}}%;"></div>
			</div>

			{{#if (and levelUp (not (eq item.system.level.current item.system.level.max)))}}
				<a class="button active" data-action="levelUpSkill" data-id="{{item.system.ultimaID}}">
					<i class="fa fa-regular fa-circle-up"></i>
				</a>
			{{/if}}
			<a class="button" data-uuid="{{item.uuid}}" data-link>Apri</a>
		</div>
	</div>
	<div>{{{item.system.description}}}</div>
</div>